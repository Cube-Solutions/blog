<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <routes>
        <route>
            <name>blog-show</name>
            <pattern>|^/([-_/\w]+)/entry/([-_/\w]+)|</pattern>
            <reverse>/%path/entry/%key</reverse>
            <module>Blog</module>
            <controller>entry</controller>
            <action>show</action>
            <variables>path,key</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>blog-category</name>
            <pattern>|^/blog/category/([-_\w]+)|</pattern>
            <reverse>/blog/category/%cat</reverse>
            <module>Blog</module>
            <controller>entry</controller>
            <action>category</action>
            <variables>cat</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>blog-preview</name>
            <pattern>|^/blog/preview/([\d]+)|</pattern>
            <reverse>/blog/preview/%o_id</reverse>
            <module>Blog</module>
            <controller>entry</controller>
            <action>preview</action>
            <variables>o_id</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>blog-tag</name>
            <pattern>|^/blog/tag/([-_\w]+)|</pattern>
            <reverse>/blog/tag/%tag</reverse>
            <module>Blog</module>
            <controller>entry</controller>
            <action>tag</action>
            <variables>tag</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>blog-calendar</name>
            <pattern>|^/blog/calendar/([\d]*)/([\d]*)$|</pattern>
            <reverse>/blog/calendar/%year/{%month}</reverse>
            <module>Blog</module>
            <controller>entry</controller>
            <action>calendar</action>
            <variables>year,month</variables>
            <priority>1</priority>
        </route>
    </routes>
</zend-config>
